<div id="results" class="container" ng-hide="searching">
  <div id="results-table" class="col-sm-9">
    <table st-table="rowCollection" st-safe-src="results" class="table table-striped">
    	<thead>
      	<tr>
        	<th>Accession</th>
        	<th>Gene</th>
        	<th>Virus</th>
        	<th>Date</th>
        	<th>Host</th>
          <th>Country</th>
          <th>Segment Length</th>
          <th>Selected</th>
      	</tr>
    	</thead>
    	<tbody>
      	<tr ng-repeat="record in results" ng-click="loadDetails(record.accession);">
      		<td>{{record.accession}}</td>
      		<td>{{record.gene}}</td>
      		<td>{{record.virus}}</td>
      		<td>{{record.date}}</td>
      		<td>{{record.host}}</td>
          <td>{{record.country}}</td>
          <td>{{record.segmentLength}}</td>
          <td>{{record.isSelected}}</td>
      	</tr>
    	</tbody>
    </table>
  </div>
  <div id="detail-panel" class="col-sm-3">
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title text-center">Record Details: {{selectedRecord.accession}}</h3>
      </div>
      <div class="panel-body" ng-show="showDetails">
        <p>Date: {{selectedRecord.date}}</p>
        <p>PubMed ID: {{selectedRecord.pubmedID}}</p>
        <p>Virus: {{selectedRecord.virus}}</p>
        <p>Taxon: {{selectedRecord.taxon}}</p>
        <p>Strain: {{selectedRecord.strain}}</p>
        <p>Isolate: {{selectedRecord.isolate}}</p>
        <p>Host: {{selectedRecord.host}}</p>
        <p>Location: {{selectedRecord.location}}</p>
        <p>Gene(s): {{selectedRecord.genes}}</p>
        <p>Definition: {{selectedRecord.definition}}</p>
      </div>
    </div>
  </div>
</div>
